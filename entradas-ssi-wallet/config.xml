<?xml version='1.0' encoding='utf-8'?>
<widget id="es.in2.blockchain.serviceprovider" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Convergence Credential Verifier</name>
    <description>Credentiall reader for Convergence Wallet by IN2 app, designed for service providers in Alastria ID protocol context. This APP allows to read and verify SSI credentials stored in Convergence Wallet by IN2.</description>
    <author email="hi@ionicframework" href="http://ionicframework.com/">Ionic Framework Team</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="orientation" value="portrait" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="mdpi" src="resources/android/splash/mdpi/ic_launcher_APP.png" />
        <icon density="hdpi" src="resources/android/splash/hdpi/ic_launcher_APP.png" />
        <icon density="xhdpi" src="resources/android/splash/xhdpi/ic_launcher_APP.png" />
        <icon density="xxhdpi" src="resources/android/splash/xxhdpi/ic_launcher_APP.png" />
        <splash density="port-hdpi" src="resources/android/splash/mdpi/1 Splash.png" />
        <splash density="port-mdpi" src="resources/android/splash/xhdpi/1 Splash.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="57" src="resources/ios/AppIcon-iOS/Icon.png" width="57" />
        <icon height="114" src="resources/ios/AppIcon-iOS/icon_20pt@2x.png" width="114" />
        <icon height="40" src="resources/ios/AppIcon-iOS/icon_40pt.png" width="40" />
        <icon height="80" src="resources/ios/AppIcon-iOS/icon_40pt@2x.png" width="80" />
        <icon height="120" src="resources/ios/AppIcon-iOS/icon_40pt@3x.png" width="120" />
        <icon height="120" src="resources/ios/AppIcon-iOS/icon_60pt@2x.png" width="120" />
        <icon height="180" src="resources/ios/AppIcon-iOS/icon_60pt@3x.png" width="180" />
        <icon height="76" src="resources/ios/AppIcon-iOS/icon_76pt.png" width="76" />
        <icon height="152" src="resources/ios/AppIcon-iOS/icon_76pt@2x.png" width="152" />
        <icon height="167" src="resources/ios/AppIcon-iOS/icon_83.5@2x.png" width="167" />
        <splash height="1334" src="resources/ios/splash/Default-667h.png" width="750" />
        <splash height="2208" src="resources/ios/splash/Default-736h.png" width="1242" />
        <splash height="1242" src="resources/ios/splash/Default-Landscape-736h.png" width="2208" />
        <splash height="1536" src="resources/ios/splash/Default-Landscape@2x~ipad.png" width="2048" />
        <splash height="2048" src="resources/ios/splash/Default-Landscape@~ipadpro.png" width="2732" />
        <splash height="768" src="resources/ios/splash/Default-Landscape~ipad.png" width="1024" />
        <splash height="2048" src="resources/ios/splash/Default-Portrait@2x~ipad.png" width="1536" />
        <splash height="2732" src="resources/ios/splash/Default-Portrait@~ipadpro.png" width="2048" />
        <splash height="1024" src="resources/ios/splash/Default-Portrait~ipad.png" width="768" />
        <splash height="960" src="resources/ios/splash/Default@2x~iphone.png" width="640" />
        <splash height="480" src="resources/ios/splash/Default~iphone.png" width="320" />
        <splash height="2732" src="resources/ios/splash/Default@2x~universal~anyany.png" width="2732" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1.3.3" />
    <plugin name="cordova-plugin-device" spec="2.0.2" />
    <plugin name="cordova-plugin-splashscreen" spec="5.0.2" />
    <plugin name="cordova-plugin-ionic-webview" spec="1.1.19" />
    <allow-navigation href="http://192.168.1.31:8100" />
    <plugin name="phonegap-plugin-barcodescanner" spec="^8.0.0">
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="27.+" />
    </plugin>
    <plugin name="cordova-plugin-fingerprint-aio" spec="1.5.0" />
    <allow-navigation href="http://192.168.1.109:8100" />
    <plugin name="cordova-plugin-secure-storage" spec="^2.6.8" />
    <engine name="browser" spec="5.0.4" />
    <engine name="android" spec="8.0.0" />
    <engine name="ios" spec="^4.5.5" />
</widget>
